@model Nigeria_Reg.Models.tblSectionF

@{
    ViewBag.Title = "Delete SectionF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Do you want to delete Survey/Section F ?</h2>

<div>
    <hr />
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.tblSite.SSID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.tblSite.SiteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.tblSite.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.SurveyDate)
                </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(m => m.tblSurvey.tblSite.SSID)
                </td>
                <td>
                    @Html.DisplayFor(m => m.tblSurvey.tblSite.SiteName)
                </td>
                <td>
                    @Html.DisplayFor(m => m.tblSurvey.tblSite.tlkp_SiteType.value)
                </td>
                <td>
                    @Html.DisplayFor(m => m.tblSurvey.SurveyDate)
                </td>
            </tr>
        </tbody>
    </table>

    <br />
    <table class="table">
        <tr><th colspan="5"><div class="text-danger">F. EDUCATION</div></th></tr>
        <tr>
            <th colspan="5">
                <div class="text-danger">
                    E.1a. Activities carried out during the week
                </div>
            </th>
        </tr>

        <tr>
            <td>
                Establishment of schools/learning spaces<div class="col-md-10">
                    @Html.CheckBoxFor(m => m.b_SchoolEstablishment, new { @disabled = "disabled" })
                </div>
            </td>
            <td>
                Distribution of material<div class="col-md-10">
                    @Html.CheckBoxFor(m => m.b_MaterialDistribution, new { @disabled = "disabled" })
                </div>
            </td>
            <td>
                Training for teachers and education personel<div class="col-md-10">
                    @Html.CheckBoxFor(m => m.b_TrainingForTeachers, new { @disabled = "disabled" })
                </div>
            </td>
            <td>
                Other activity carried<div class="col-md-10">
                    @Html.CheckBoxFor(m => m.b_Other, new { @disabled = "disabled" })
                </div>
            </td>
            <td>
                If other specify:<div class="display-field">
                    @Html.DisplayFor(m => m.Other_activity_spec)
                </div>

            </td>
        </tr>


        <tr><th colspan="3"><div class="text-danger">F.1b. Gaps identified on site</div></th></tr>

        <tr>
            <td colspan="2">% of the children at the site that attended school</td>
            <th colspan="1">
                <div class="display-field">
                    @Html.DisplayFor(m => m.perc_ch_attend_sch)
                </div>
            </th>
        </tr>
        <tr>
            <td colspan="2">% of instruction material provided</td>
            <th colspan="1">
                <div class="display-field">
                    @Html.DisplayFor(m => m.perc_avail_instruction_mat)
                </div>
            </th>
        </tr>
        <tr>
            <td colspan="2">% of Children at the site with access to educational facilities</td>
            <th colspan="1">
                <div class="display-f">
                    @Html.DisplayFor(m => m.perc_ch_access_edu_fac)
                </div>
            </th>
        </tr>

        <tr>
            <th colspan="5">
                <div class="text-danger">
                    F.2. Comments
                </div>
            </th>
        </tr>
        <tr>
            <td>
                <div class="editor-field">
                    @Html.TextAreaFor(m => m.Comments, 6, 200, new { @disabled = "disabled" })
                </div>
            </td>
        </tr>

        <tr>
            <th colspan="1">
                <div class="text-danger">
                    F.3. Services and facilities donated (during the week in review)
                </div>
            </th>
        </tr>
        <tr>
            <td colspan="7">

                <table width="100%" class="table">
                    <tr>
                        <th>S/N</th>
                        <th>Description</th>
                        <th>QTTY</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Provided by?</th>
                        <th>Remark</th>
                    </tr>

                    @{int j = 0;}
                    @foreach (var m in Model.tbl_EDU_Services.OrderBy(x => x.SN))
                    {
                        j++;
                        <tr>

                            <td>
                                @*@Html.DisplayFor(model => m.SN)*@
                                @j
                            </td>
                            <td>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => m.tlkp_EDU_Desc.value)
                                </div>
                            </td>
                            <td>
                                <div class="col-md-10 txtresize">
                                    @Html.DisplayFor(model => m.QTTY)
                                </div>
                            </td>
                            <td>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => m.Lat)
                                </div>
                            </td>
                            <td>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => m.Lon)
                                </div>
                            </td>
                            <td>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => m.tlkp_Provider.value)
                                </div>
                            </td>
                            <td>
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => m.Remark)
                                </div>
                            </td>

                        </tr>
                    }
                </table>
            </td>
        </tr>

    </table>
    <br />

    <table width=100%>
        <tr>
            <th>Created by</th>
            <th>Created time</th>
            <th>Updated by</th>
            <th>Updated time</th>
        </tr>
        <tr>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.created_by)
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.create_time)
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.updated_by)
                </div>
            </td>
            <td>
                <div class="display-field">
                    @Html.DisplayFor(model => model.update_time)
                </div>
            </td>

        </tr>
    </table>
    <br />

    @using (Html.BeginForm())
    {
        //@Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "Index", new { id = Model.SurveyID })
        </div>
    }

</div>
