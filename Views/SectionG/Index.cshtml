@model Nigeria_Reg.Models.tblSectionG

@{
    ViewBag.Title = "Survey SectionG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details Survey/Section G</h2>

<div>

	<hr />
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.tblSite.SSID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.tblSite.SiteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.tblSite.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tblSurvey.SurveyDate)
                </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>
                    @ViewBag.SSID
                </td>
                <td>
                    @ViewBag.SiteName
                </td>
                <td>
                    @ViewBag.SiteType
                </td>
                <td>
                    @ViewBag.s_date
                </td>
            </tr>
        </tbody>
    </table>

@if (Model != null)
{

        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.tblSurvey.SurveyID }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.tblSurvey.SurveyID }) |
            @Html.ActionLink("<<SectionF", "Index", "SectionF", new RouteValueDictionary(new { id = Model.tblSurvey.SurveyID }), null) |
            @*@Html.ActionLink(">>SectionG", "Index", "SectionG", new RouteValueDictionary(new { id = Model.tblSurvey.SurveyID }), null) |*@
            @Html.ActionLink("Back to Surveys", "Index", "Surveys", new RouteValueDictionary(new { id = Model.tblSurvey.tblSite.SeqID }), null)
        </p>

    <fieldset>

        <br />
        <table class="table">
            <tr><th colspan="4"><div class="text-danger">G. HEALTH/NUTRITION</div></th></tr>
            <tr>
                <th colspan=4>
                    <div class="text-danger">
                        G.1a. Activities carried out during the week
                    </div>
                </th>
            </tr>

            <tr>
                <td>
                    Supplementary feeding for children<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_SupplementaryFeeding_ch, new { @disabled = "disabled" })
                    </div>
                </td>
                <td>
                    Supplementary feeding for pregnant and lactating mothers<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_SupplementaryFeeding_mo, new { @disabled = "disabled" })
                    </div>
                </td>
                <td>
                    Vaccination<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_Vaccination, new { @disabled = "disabled" })
                    </div>
                </td>
                <td>
                    Establishment of health structure<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_HealthStucture_Establishment, new { @disabled = "disabled" })
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    Medical referrals<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_MedicalReferrals, new { @disabled = "disabled" })
                    </div>
                </td>
                <td>
                    Food distribution<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_FoodDistribution, new { @disabled = "disabled" })
                    </div>
                </td>
                <td>
                    Other activity carried<div class="col-md-10">
                        @Html.CheckBoxFor(m => m.b_Other, new { @disabled = "disabled" })
                    </div>
                </td>
                <td>
                    If other specify:<div class="display-field">
                        @Html.DisplayFor(m => m.Other_activity_spec)
                    </div>

                </td>
            </tr>


            <tr><th colspan="3"><div class="text-danger">G.1b. Gaps requiring intervention under week in review</div></th></tr>

            <tr>
                <td colspan="2">Quality of healthcare delivery</td>
                <th colspan="1">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.tlkp_Quality.value)
                    </div>
                </th>
            </tr>
            <tr>
                <td colspan="2">Disease outbreak?</td>
                <th colspan="1">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.DiseaseOutbreak) 
                    </div>
                </th>
            </tr>
            <tr>
                <td colspan="1">If yes, which?</td>
                <th colspan="1">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.tlkp_DiseaseOutbreak.value)
                    </div>
                </th>
                <td colspan="1">
                    If other specify:<div class="display-field">
                        @Html.DisplayFor(m => m.OtherDisease_spec)
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="2">Location of nearest health facility</td>
                <th colspan="1">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.tlkp_HealthFacLoc.value)
                    </div>
                </th>
            </tr>
            <tr>
                <td colspan="2">Access to food</td>
                <th colspan="1">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.tlkp_FoodAccess.value)
                    </div>
                </th>
            </tr>
            <tr>
                <td colspan="2">Access to market</td>
                <th colspan="3">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.MarketAccess)
                    </div>
                </th>
            </tr>
            <tr>
                <td colspan="2">Meals per Day</td>
                <th colspan="1">
                    <div class="display-radio">
                        @Html.DisplayFor(m => m.tlkp_MealsPerDay_freq.value)
                    </div>
                </th>
            </tr>
            <tr>
                <th colspan="5">
                    <div class="text-danger">
                        G.2. Comments
                    </div>
                </th>
            </tr>
            <tr>
                <td>
                    <div class="display-field">
                        @Html.TextAreaFor(m => m.Comments, 6, 200, new { @disabled = "disabled" })
                        @Html.ValidationMessageFor(m => m.Comments)
                    </div>
                </td>
            </tr>

            <tr>
                <th colspan="1">
                    <div class="text-danger">
                        G.3. Services and facilities donated (during the week in review)
                    </div>
                </th>
            </tr>
            <tr>
                <td colspan="8">

                    <table width="100%" class="table">
                        <tr>
                            <th>S/N</th>
                            <th>Sub-Category</th>
                            <th>Description</th>
                            <th>QTTY</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Provided by?</th>
                            <th>Remark</th>
                        </tr>

                        @{int j = 0;}
                        @foreach (var m in Model.tbl_HEALTH_NUT_Services.OrderBy(x => x.SN))
                        {
                            j++;
                            <tr>

                                <td>
                                    @*@Html.DisplayFor(model => m.SN)*@
                                    @j
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => m.tlkp_HEALTH_NUT_SubCat.value)
                                    </div>
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => m.tlkp_HEALTH_NUT_Desc.value)
                                    </div>
                                </td>
                                <td>
                                    <div class="col-md-10 txtresize">
                                        @Html.DisplayFor(model => m.QTTY)
                                    </div>
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => m.Lat)
                                    </div>
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => m.Lon)
                                    </div>
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => m.tlkp_Provider.value)
                                    </div>
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DisplayFor(model => m.Remark)
                                    </div>
                                </td>

                            </tr>
                        }
                    </table>
                </td>
            </tr>

            <tr>
                <th colspan="1">
                    <div class="text-danger">
                        H. Active Partners on Site
                    </div>
                </th>
            </tr>

            <tr>
                <th>
                    @{
                        foreach (var partner in Model.tlkp_Provider)
                        {
                                @*@partner.id @: @partner.value <br />*@
                                @: @string.Join(",", @partner.value);     
                        }
                    }
                </th>

            </tr>

            <tr>
                <th colspan="8">
                    <div class="text-danger">
                        Other active Partners on Site
                    </div>
                </th>
            </tr>
            <tr>
                <td>
                    <div class="editor-field">
                        @Html.TextAreaFor(m => m.ActivePartnersOnSite, 6, 200, new { @disabled = "disabled" })
                    </div>
            </tr>

        </table>
        <br />

        <table width=100%>
            <tr>
                <th>Created by</th>
                <th>Created time</th>
                <th>Updated by</th>
                <th>Updated time</th>
            </tr>
            <tr>
                <td>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.created_by)
                    </div>
                </td>
                <td>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.create_time)
                    </div>
                </td>
                <td>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.updated_by)
                    </div>
                </td>
                <td>
                    <div class="display-field">
                        @Html.DisplayFor(model => model.update_time)
                    </div>
                </td>

            </tr>
        </table>
    </fieldset>

    <br />
    <p>
        @Html.ActionLink("<<SectionF", "Index", "SectionF", new RouteValueDictionary(new { id = Model.tblSurvey.SurveyID }), null) |
        @Html.ActionLink("Back to Surveys", "Index", "Surveys", new RouteValueDictionary(new { id = Model.tblSurvey.tblSite.SeqID }), null)
    </p>

}
else
{

    <p>
        @Html.ActionLink("Create SectionG", "Create", new { id = (int)ViewBag.s_id }) |
        @Html.ActionLink("Back to SectionF", "Index", "SectionF", new RouteValueDictionary(new { id = (int)ViewBag.s_id }), null)
    </p>

    <b>No data</b>
}
</div>

